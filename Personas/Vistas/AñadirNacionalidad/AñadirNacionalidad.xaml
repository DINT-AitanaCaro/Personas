<Window x:Class="Personas.Vistas.AñadirNacionalidad.AñadirNacionalidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personas.Vistas.AñadirNacionalidad"
        mc:Ignorable="d"
        Title="AñadirNacionalidad" Height="100" Width="300">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="80"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="5">
        <TextBlock>Nacionalidad</TextBlock>
        <TextBox x:Name="nacionalidadTextBox"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="aceptarButton" Click="aceptarButton_Click">Aceptar</Button>
            <Button>Cancelar</Button>
        </StackPanel>
    </StackPanel>
</Window>
